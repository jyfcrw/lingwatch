<div class="page-header row">
  <div class="col-md-6">
    <h1> <%= h Watch %>会话 </h1>
  </div>
  <div class="col-md-6">
    <%= link_to backend_watches_path, class: "btn btn-default pull-right" do %>
      返回上一页
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-5">
      <table class="table table-bordered table-striped">
      <colgroup>
        <col class="col-md-3">
        <col class="col-md-9">
      </colgroup>
      <thead><h3>会话信息</h3></thead>
      <tbody>
        <tr>
          <td><%= h Device, :code %></td>
          <td><%= @watch.code %></td>
        </tr>
        <tr>
          <td><%= h Dialogue, :code %></td>
          <td><%= (@watch_dialogue && @watch_dialogue.code) || "<i>设备还没有会话</i>".html_safe %></td>
        </tr>
        <% if @watch_dialogue %>
          <tr>
            <td><%= h Dialogue, :state %></td>
            <td><%= @watch_dialogue.state_text %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
